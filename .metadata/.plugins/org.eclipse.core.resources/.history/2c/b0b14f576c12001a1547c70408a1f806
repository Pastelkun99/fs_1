	@RequestMapping(value="/mng/infoAppend.do", method=RequestMethod.GET)
	public String infoAppend(Model model) {
		InfoVO info = ans.getAnalysisCount();
		int count = 0;
		if(info == null) {
			count = 0;
		}
		model.addAttribute("count", count);
		return "infoAppend";
	}
	
