<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
					"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="adminMapper">
	
	<select id="getPopupInfo" resultType="com.fusion1.dao.PopupVO">
		SELECT * FROM popuptbl WHERE pop_id = 1
	</select>
	
	<update id="updatePopupInfo">
		UPDATE popuptbl SET 
							pop_title = #{pop_title},
							pop_fromdate = #{pop_fromdate},
							pop_todate = #{pop_todate},
							pop_height = #{pop_title},
							pop_width = #{pop_title},
							pop_content = #{pop_title},
							pop_imageurl = #{pop_title},
							pop_url = #{pop_url},
							pop_aval = #{pop_aval}
					WHERE pop_id = 1
	</update>
	
</mapper>